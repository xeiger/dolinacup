    ['Tomáš<br>Bartoň', '', '2:0', '2:1', '', '', '', '2:0', '', '', '', '6:1', '3', ''],
    ['Pavel<br>Mžik', '0:2', '', '2:1', '1:2', '', '', '2:0', '2:0', '2:0', '2:0', '11:5', '5', ''],
    ['Libor<br>Stanislav', '1:2', '1:2', '', '0:2', '', '', '', '2:0', '', '2:0', '6:6', '2', ''],
    ['Honza<br>Schwarz', '', '2:1', '2:0', '', '2:0', '', '', '', '2:0', '', '8:1', '4', ''],
    ['Martin<br>Krupa', '', '', '', '0:2', '', '', '2:0', '', '2:0', '2:0', '6:2', '3', ''],
    ['Radim<br>Běčák', '', '', '', '', '', '', '', '2:0', '', '', '2:0', '1', ''],
    ['Mira<br>Kokeš', '0:2', '0:2', '', '', '0:2', '', '', '0:2', '', '1:2', '1:10', '0', ''],
    ['Petr<br>Osterezy', '', '0:2', '0:2', '', '', '0:2', '2:0', '', '', '0:2', '2:8', '1', ''],
    ['Martin<br>Indrák', '', '0:2', '', '0:2', '0:2', '', '', '', '', '', '0:6', '0', ''],
    ['Vláďa<br>Vašut', '', '0:2', '0:2', '', '0:2', '', '2:1', '2:0', '', '', '4:7', '2', '']
