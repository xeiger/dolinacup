<!-- Content -->
<div id="content">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <div class="space20"></div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#blue" aria-controls="blue" role="tab" data-toggle="tab">Modrá skupina</a></li>
          <li role="presentation"><a href="#red" aria-controls="red" role="tab" data-toggle="tab">Červená skupina</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">

          <div role="tabpanel" class="tab-pane active" id="blue">
            <div class="space20"></div>

            <table class="table table-bordered">

              <% table_blue.each_with_index do |row, r_index| %>
                <tr class="result">

                  <% row.each_with_index do |col, c_index| %>
                    <%
                      width = c_index > 7 ? '6%' : '11%'
                      clss = r_index == c_index ? 'lightblue' : ''
                      clss << 'lightgreen bold' if c_index > 7
                    %>
                    <% if (r_index == 0 and c_index > 0) or (r_index > 0 and c_index ==0) %>
                      <th style="width: <%= width %>"><%=raw col %></th>
                    <% else %>
                      <td style="width: <%= width %>" class="<%= clss %>"><%=raw col %></td>
                    <% end %>
                  <% end %>

                </tr>
              <% end %>

            </table>

          </div>

          <div role="tabpanel" class="tab-pane" id="red">
            <div class="space20"></div>

            <table class="table table-bordered">

              <% table_red.each_with_index do |row, r_index| %>
