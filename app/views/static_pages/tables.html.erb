<!-- Content -->
<div id="content">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <div class="space20"></div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#blue" aria-controls="blue" role="tab" data-toggle="tab">Modrá skupina</a></li>
          <li role="presentation"><a href="#red" aria-controls="red" role="tab" data-toggle="tab">Červená skupina</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">

          <div role="tabpanel" class="tab-pane active" id="blue">
            <div class="space20"></div>

            <table class="table table-bordered">

              <% table_blue.each_with_index do |row, r_index| %>
                <tr class="result">

                  <% row.each_with_index do |col, c_index| %>
                    <% if col.include?('<br>') %>
                      <th style="width: 12%"><%=raw col %></th>
                    <% else %>
                      <td style="width: 12%" class="<%= 'lightblue' if r_index == c_index %>"><%=raw col %></td>
                    <% end %>
                  <% end %>

                </tr>
              <% end %>

            </table>

          </div>

          <div role="tabpanel" class="tab-pane" id="red">
            <div class="space20"></div>

            <table class="table table-bordered">

              <% table_red.each_with_index do |row, r_index| %>
                <tr class="result">

                  <% row.each_with_index do |col, c_index| %>
                    <% if col.include?('<br>') %>
                      <th style="width: 12%"><%=raw col %></th>
                    <% else %>
                      <td style="width: 12%" class="<%= 'lightred' if r_index == c_index %>"><%=raw col %></td>
                    <% end %>
                  <% end %>

                </tr>
              <% end %>

            </table>

          </div>

        </div>

      </div>
    </div>
    <div class="space50"></div> 

  </div>
</div>
